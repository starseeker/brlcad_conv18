add_custom_target(distcheck-@TARGET_SUFFIX@
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Extracting TGZ archive..."
  COMMAND ${CMAKE_COMMAND} -E remove distcheck_@TARGET_SUFFIX@.log
  COMMAND ${CMAKE_COMMAND} -E remove_directory distcheck-@TARGET_SUFFIX@
  COMMAND ${CMAKE_COMMAND} -E make_directory distcheck-@TARGET_SUFFIX@
  COMMAND ${CMAKE_COMMAND} -E chdir distcheck-@TARGET_SUFFIX@ ${CMAKE_COMMAND} -E tar xzf ../${CPACK_SOURCE_PACKAGE_FILE_NAME}.tar.gz
  COMMAND ${CMAKE_COMMAND} -E make_directory distcheck-@TARGET_SUFFIX@/build
  COMMAND ${CMAKE_COMMAND} -E make_directory distcheck-@TARGET_SUFFIX@/install
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Extracting TGZ archive... Done."
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Configuring... "
  COMMAND ${CMAKE_COMMAND} -E chdir distcheck-@TARGET_SUFFIX@/build ${CMAKE_COMMAND} ../${CPACK_SOURCE_PACKAGE_FILE_NAME} @CMAKE_OPTS@ -DCMAKE_INSTALL_PREFIX=${CMAKE_CURRENT_BINARY_DIR}/distcheck-@TARGET_SUFFIX@/install @TARGET_REDIRECT@
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Configuring... Done."
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Compiling using source from TGZ archive..."
  COMMAND @DISTCHECK_BUILD_CMD@
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Compiling using source from TGZ archive... Done."
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Run build-directory regression and benchmark testing..."
  COMMAND ${CMAKE_COMMAND} --build distcheck-@TARGET_SUFFIX@/build  --target regress @TARGET_REDIRECT@
  COMMAND TIMEFRAME=1 ${CMAKE_COMMAND} --build distcheck-@TARGET_SUFFIX@/build --target benchmark @TARGET_REDIRECT@
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Run build-directory regression and benchmark testing... Done."
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Install from tgz build directory..."
  COMMAND ${CMAKE_COMMAND} --build distcheck-@TARGET_SUFFIX@/build --target install @TARGET_REDIRECT@
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Install from tgz build directory... Done."
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Clear tgz archive sources and build directory..."
  COMMAND ${CMAKE_COMMAND} -E remove_directory distcheck-@TARGET_SUFFIX@/${CPACK_SOURCE_PACKAGE_FILE_NAME}
  COMMAND ${CMAKE_COMMAND} -E remove_directory distcheck-@TARGET_SUFFIX@/build
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Clear tgz archive sources and build directory... Done."
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Run benchmark testing from tgz archive installed build..."
  COMMAND ${CMAKE_COMMAND} -E chdir distcheck-@TARGET_SUFFIX@ install/${BIN_DIR}/benchmark run TIMEFRAME=1 @TARGET_REDIRECT@
  COMMAND ${CMAKE_COMMAND} -E chdir distcheck-@TARGET_SUFFIX@ install/${BIN_DIR}/benchmark clean @TARGET_REDIRECT@
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Run benchmark testing from installed build... Done."
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Cleanup..."
  COMMAND ${CMAKE_COMMAND} -E remove_directory distcheck-@TARGET_SUFFIX@
  COMMAND ${CMAKE_COMMAND} -E echo "-- distcheck-@TARGET_SUFFIX@ - Cleanup... Done."
  COMMENT "[distcheck-@TARGET_SUFFIX@] Peforming distcheck - @TARGET_SUFFIX@ configuration..."
  DEPENDS distcheck-source-archives
  )
