pkgname=@PACKAGE_NAME@
pkgver=@MAJOR_VERSION@.@MINOR_VERSION@
pkgrel=@PATCH_VERSION@
pkgdesc="BRL-CAD is a powerful open source constructive solid geometry (CSG) solid modeling system that includes interactive geometry editing, ray-tracing for rendering & geometric analyses, network distributed framebuffer support, image & signal-processing tools."
url="http://brlcad.org"
license=("LGPL" "BSD" "BDL")
install=brlcad.install
depends=('libpng' 'tcl' 'tk' 'zlib' 'libgl')
options=('NOLIBTOOL')
source=( \
    http://dl.sourceforge.net/sourceforge/@PACKAGE@/@PACKAGE@-@BRLCAD_VERSION@.tar.bz2 \
    brlcad.sh \
    brlcad.install \
    )
md5sums=( \
    '01539c0045e8f6159d6aeea374641cde' \
    'bb845cbd3cabb288c427cd0e9a0efee1' \
    '09d5fa0be8ebc2b5495457b8459df2c7' \
    )

build() {
    cd $startdir/src/@PACKAGE@-@BRLCAD_VERSION@
    ./configure --enable-optimized --prefix=@BRLCAD_ROOT@
    make || return 1
    make DESTDIR=$startdir/pkg install || return 1
    mkdir -p $startdir/pkg/etc/profile.d
    install -m755 $startdir/src/brlcad.sh $startdir/pkg/etc/profile.d
}

