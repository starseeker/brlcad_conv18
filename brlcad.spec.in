Summary: BRLCAD
Name: @PACKAGE@
Version: @VERSION@
Release: 1
Copyright: ...
Vendor: AMSRD-ARL-SL-BE (ACST)
Url: http://brlcad.org
Group: Productivity/Graphics/CAD
Source0: http://aleron.dl.sourceforge.net/sourceforge/brlcad/@PACKAGE@-@VERSION@.tar.gz
Buildroot: /var/tmp/redhat/BUILD/@PACKAGE@

%description

%prep
%setup -q
%build
./configure CFLAGS="$RPM_OPT_FLAGS"

make

%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT/usr/bin
mkdir -p $RPM_BUILD_ROOT/usr/share/@PACKAGE@
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
/usr/bin/@PACKAGE@
/usr/share/@PACKAGE@/*

%changelog

