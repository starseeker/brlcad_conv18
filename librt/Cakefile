#define PRODUCTS	librt.ARCH_SUF
#define	SRCSUFF	.c
#define MANSECTION	3

#include "../Cakefile.defs"

/* Separate into orderly groupings:
 *	Raytrace logic
 *	Database handling
 *	Geometry routines
 *	Utility routines
 */
/* 	complex debug plane polyno */
