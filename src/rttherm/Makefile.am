	rttherm.1 \
	ssamp-bw.1

BUILT_SOURCES = vers.c
vers.c: $(ALLSRCS)
	@SH@ $(top_srcdir)/sh/vers.sh version "Thermal Multi-Spectral RT" > $@

rttherm_SOURCES = \
	spectrum.c \
	vers.c \
	viewtherm.c

rttherm_CFLAGS = -DRT_MULTISPECTRAL
rttherm_LDADD = \
	$(top_builddir)/src/rt/librttherm.a \
	${MULTISPECTRAL} \
	${OPTICAL}

ssampview_SOURCES = \
	spectrum.c \
	ssampview.c

ssampview_CFLAGS = @X_CFLAGS@
ssampview_LDADD = \
	${FB} \
	${LIBRT} \
	${OPTICAL} \
	${TCL} \
	$(TK)


