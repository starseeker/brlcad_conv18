<refentry xmlns="http://docbook.org/ns/docbook" version="5.0" xml:id="edit-translate">

<refmeta>
  <refentrytitle>EDIT TRANSLATE</refentrytitle>
  <manvolnum>nged</manvolnum>
  <refmiscinfo class="source">BRL-CAD</refmiscinfo>
  <refmiscinfo class="manual">BRL-CAD User Commands</refmiscinfo>
</refmeta>

<refnamediv xml:id="name">
  <refname>edit translate</refname>
  <refpurpose>
    Translates the positions of <emphasis>object</emphasis>s, using
    coordinates, offsets, and objects as reference points.
  </refpurpose>
</refnamediv>

<!-- body begins here -->
<refsynopsisdiv xml:id="synopsis">
  <cmdsynopsis>
    <!-- hv3 hack to prevent line insertion -->
    <link linkend="dummy_id">&#09;</link>
    <command xml:id="dummy_id">edit translate</command>
    <group>
      <synopfragmentref linkend="from">
        <replaceable>from</replaceable>
      </synopfragmentref>
    </group>
    <group choice="req">
      <synopfragmentref linkend="to">
        <replaceable>to</replaceable>
      </synopfragmentref>
    </group>
    <arg choice="plain" rep="repeat"><replaceable>object</replaceable></arg>

    <sbr/><sbr/>
    <synopfragment xml:id="from">
      <arg><option>-n</option></arg>
      <arg choice="plain"><option>-k</option></arg>
      <group choice="req">
	<arg choice="plain">
	  <synopfragmentref linkend="obj">
	    <replaceable>from_object</replaceable>
	  </synopfragmentref>
	</arg>
	<arg choice="plain">
	  <synopfragmentref linkend="pos">
	    <replaceable>from_position</replaceable>
	  </synopfragmentref>
	</arg>
      </group>
    </synopfragment>

    <sbr/>
    <synopfragment xml:id="to">
      <arg><option>-n</option></arg>
      <group>
        <arg choice="plain"><option choice="plain">-a</option></arg>
        <arg choice="plain"><option choice="plain">-r</option></arg>
      </group>
      <group choice="req">
	<arg choice="plain">
	  <synopfragmentref linkend="obj">
	    <replaceable>to_object</replaceable>
	  </synopfragmentref>
	</arg>
	<arg choice="plain">
	  <synopfragmentref linkend="pos">
	    <replaceable>to_position</replaceable>
	  </synopfragmentref>
	</arg>
      </group>
    </synopfragment>

    <sbr/>
    <synopfragment xml:id="pos">
      <group choice="plain">
	<arg choice="req">
	  <synopfragmentref linkend="coord">
	    <replaceable>coords</replaceable>
	  </synopfragmentref>
	</arg>
	<arg choice="req">
	  <arg>
	    <arg choice="plain"><option>-x</option></arg>
	    <group choice="req">
	      <arg choice="plain"><replaceable>x</replaceable></arg>
	      <arg choice="plain">
		<synopfragmentref linkend="obj">
		  <replaceable>x-obj</replaceable>
		</synopfragmentref>
	      </arg>
	    </group>
	  </arg>
	  <arg>
	    <arg choice="plain"><option>-y</option></arg>
	    <group choice="req">
	      <arg choice="plain"><replaceable>y</replaceable></arg>
	      <arg choice="plain">
		<synopfragmentref linkend="obj">
		  <replaceable>y-obj</replaceable>
		</synopfragmentref>
	      </arg>
	    </group>
	  </arg>
	  <arg>
	    <arg choice="plain"><option>-z</option></arg>
	    <group choice="req">
	      <arg choice="plain"><replaceable>z</replaceable></arg>
	      <arg choice="plain">
		<synopfragmentref linkend="obj">
		  <replaceable>z-obj</replaceable>
		</synopfragmentref>
	      </arg>
	    </group>
	  </arg>
	</arg>
      </group>
    </synopfragment>

    <sbr/>
    <synopfragment xml:id="obj">
      <arg choice="plain">
        <arg><replaceable>path/</replaceable></arg>
        <arg choice="plain"><replaceable>object</replaceable></arg>
      </arg>
      <arg>
	<synopfragmentref linkend="coord">
	  <replaceable>offset_distance</replaceable>
	</synopfragmentref>
      </arg>
    </synopfragment>

    <sbr/>
    <synopfragment xml:id="coord">
      <arg choice="plain"><replaceable>x</replaceable></arg>
      <arg>
	<arg choice="plain"><replaceable>y</replaceable></arg>
	<arg><replaceable>z</replaceable></arg>
      </arg>
    </synopfragment>


  </cmdsynopsis>
</refsynopsisdiv>

