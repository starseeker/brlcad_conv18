<itemizedlist>
      <listitem>
        <para>Space Efficient</para>
      </listitem>
      <listitem>
        <para>Machine independent</para>
      </listitem>
    </itemizedlist>
<itemizedlist>
      <listitem>
        <para><itemizedlist>
